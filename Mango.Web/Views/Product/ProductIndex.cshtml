@using System.Globalization
@model IEnumerable<Mango.Web.Models.Dtos.ProductDto>
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary"> Product list</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-action="CreateProduct" class="btn btn-primary"><i class="fas fa-plus" ></i>Create New Product</a>
		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<td>
					 Name
				</td>
				<td>
					 Category 
				</td>
				<td>
					 Price
				</td>
			</tr>
		</thead>
		<tbody>
			@foreach (var product in Model)
			{
				<tr>
					<td>@product.Name</td>
					<td>@product.CategoryName</td>
					<td>@(product.Price.ToString("C", CultureInfo.CreateSpecificCulture("en-US")))</td>
					<td>
						<a asp-action="ProductEdit" class="btn btn-success" asp-route-Id="@product.Id">
							<i class="fas fa-edit"></i>
						</a>
						<a asp-action="ProductDelete" class="btn btn-danger" asp-route-Id="@product.Id">
							<i class="fas fa-trash"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>

	</table>
</div>